<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
version="4.0">
<display-name>ProgettoTIW</display-name>
<context-param>
    <param-name>dbUrl</param-name>
    <param-value>jdbc:mysql://localhost:3306/progettoTIW?serverTimezone=UTC</param-value>
  </context-param>
  <context-param>
    <param-name>dbUser</param-name>
    <param-value>root</param-value>
  </context-param>
  <context-param>
    <param-name>dbPassword</param-name>
    <param-value>milone1</param-value>
  </context-param>
  <context-param>
    <param-name>dbDriver</param-name>
    <param-value>com.mysql.cj.jdbc.Driver</param-value>
  </context-param>
  <filter> 
      <filter-name>UserChecker</filter-name>
      <filter-class>it.polimi.tiw.filters.UserChecker</filter-class> 
 </filter>
 <filter-mapping> 
    <filter-name>UserChecker</filter-name> 
    <url-pattern>/CreateComment</url-pattern> 
    <url-pattern>/album</url-pattern> 
    <url-pattern>/AddToAlbum</url-pattern>
    <url-pattern>/CreateAlbum</url-pattern>    
    <url-pattern>/GetAlbumData</url-pattern>    
    <url-pattern>/GetCreateAlbumData</url-pattern>
    <url-pattern>/GetHomeData</url-pattern>
    <url-pattern>/GetImageData</url-pattern>
    <url-pattern>/SaveAlbumOrder</url-pattern>
    <url-pattern>/CreateComment</url-pattern>
 </filter-mapping>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
</web-app>
